<div class="page-header">
	<h1>Articles <small>All the news from TGW</small></h1>
</div>

<% @articles.each do |article| %>
	<div class="row article-row">
		<div class="span3">
			<div class="tgw-box">
				<b><%= link_to article.title, article %></b><br />
				<br />
				<%= article.created_at.strftime(date_string) %>
			</div>
		</div>
		<div class="span9">
			<%= article.body.markabb.split("<br />")[0..2].join("<br />").html_safe %>
		</div>
	</div>
<% end %>