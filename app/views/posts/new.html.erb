<div class="page-header">
	<h1>Reply to topic <small><%= @topic.name %></small></h1>
</div>

<%= form_for [@forum, @topic, @post] do |f| %>
	<%= f.hidden_field :user_id %>
	<%= f.hidden_field :topic_id %>
	<%= f.hidden_field :forum_id %>
	<div class="row">
		<div class="span4">
			<div class="well">
				<%= f.submit (params[:action] == "edit" ? "Edit Post" : "Reply"), class: "btn btn-primary" %>
				<%= link_to "Cancel", forum_topic_posts_path(@forum, @topic), class: "btn btn-danger" %>
			</div>
		</div>
		<div class="span8">
			<%= f.text_area :body, style: 'width:600px;' %>
		</div>
	</div>
<% end %>
